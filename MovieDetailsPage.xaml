<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="firstApp.MovieDetailsPage"
             Title="Movie Details">

    <VerticalStackLayout Padding="20" Spacing="12">
        <Label x:Name="EmojiLabel" HorizontalOptions="Center" FontSize="64" />

        <Label x:Name="TitleLabel" FontAttributes="Bold" FontSize="22" HorizontalOptions="Center" />

        <Label x:Name="YearLabel" FontSize="14" />
        <Label x:Name="DirectorLabel" FontSize="14" />
        <Label x:Name="GenreLabel" FontSize="14" />
        <Label x:Name="RatingLabel" FontSize="14" />

    </VerticalStackLayout>

</ContentPage>